<div id="wrappertop"></div>
    <div id="wrappermiddle" class="wrappermiddle_signup">
      <h2>Register User</h2>
      <%= form_tag(user_register_path, method: "post") do %>
      <div class="username">
          <div id="username_inputleft"></div>
            <div id="username_inputmiddle">
                <%=text_field_tag :username, nil, placeholder: "Username",id: "url" %>
                <%= image_tag("usericon.png", :alt => "email icon",:class =>"iconuser", :id => "url_user", size: "16x10") %>
            </div>
          <div id="username_inputright"></div>
      </div>
      <div id="username_input">
          <div id="username_inputleft"></div>
            <div id="username_inputmiddle">
                <%=email_field_tag :email, nil, placeholder: "Email",id: "url" %>
                <%= image_tag("mailicon.png", :alt => "email icon", :id => "url_user") %>
            </div>
          <div id="username_inputright"></div>
      </div>
      <div class= "password_input">
          <div id="password_inputleft"></div>
            <div id="password_inputmiddle">
                <%=password_field_tag :password, nil, placeholder: "Password",id: "url" %>
                <%= image_tag("passicon.png", :alt => "", :id => "url_password") %>
            </div>
          <div id="password_inputright"></div>
      </div>
      <div id='confirm_pass' class= "password_input">
          <div id="password_inputleft"></div>
            <div id="password_inputmiddle">
                <%=password_field_tag :confirm_password, nil, placeholder: "Confirm password",id: "url" %>
                <%= image_tag("passicon.png", :alt => "", :id => "url_password") %>
            </div>
          <div id="password_inputright"></div>
      </div>
      <div id="submit" class="signup">
        <%= image_submit_tag("submit_hover.png", :id => "submit1", :value => "Sign In") %>
        <%= image_submit_tag("submit.png", :id => "submit2", :value => "Sign In" ) %>
      </div>
      <% end %>